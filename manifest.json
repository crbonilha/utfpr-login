{
    "manifest_version": 2,
    "name": "UTFPR Login",
    "description": "Fa√ßa login na rede da UTFPR automaticamente.",
    "version": "1.5",
    "icons": {
        "128": "assets/icon.png"
    },
    "browser_action": {
        "default_title": "UTFPR Login",
        "default_popup": "config.html"
    },
    "permissions": [
        "https://*/*",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://1.1.1.1/fs/*"],
            "js":      ["action.js"],
            "run_at":  "document_end"
        }
    ]
}
